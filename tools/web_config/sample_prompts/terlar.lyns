function lyns_prompt --description 'Write out the prompt'
    set -l last_status $status

    prompt_login

    echo -n ':'

    # PWD
    set_color $lyns_color_cwd
    echo -n (prompt_pwd)
    set_color normal

    __terlar_git_prompt
    lyns_hg_prompt
    echo

    if not test $last_status -eq 0
        set_color $lyns_color_error
    end

    echo -n 'âž¤ '
    set_color normal
end
